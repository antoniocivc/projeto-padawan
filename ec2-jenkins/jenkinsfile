pipeline {
    agent any
    tools {
        terraform 'terraform'
            }
    stages {
        stage('Git checkout') {
            steps {
                git branch: 'main', credentialsId: 'ce594764-064d-4c77-a416-1ef1c44a6ffb', url: 'https://github.com/antoniocivc/projeto-padawan'
            }
        }
        
        stage('Terraform init') {
            steps {
                dir("ec2-jenkins") { 
                sh 'terraform init  -var="key_name=key_to_ssh"'
                }
            }
        }
        
        stage('Terraform plan') {
            steps {
                
                    dir("ec2-jenkins") {
                    withAWS(credentials:'cd1e80cc-c7b2-474b-9647-e07d156cf142') {
                    sh 'terraform plan -var="key_name=key_to_ssh"'
                }
            }
        }
        }
        stage('Terraform apply') {
            
            steps {
                 
                 dir("ec2-jenkins") {
                 withAWS(credentials:'cd1e80cc-c7b2-474b-9647-e07d156cf142') {
                 sh 'terraform apply --auto-approve -var="key_name=key_to_ssh"'
                 }
                     
                 }
            }
            }
        }
    }
