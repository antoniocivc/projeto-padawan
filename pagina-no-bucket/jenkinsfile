pipeline {
    agent any
    tools {
        terraform 'terraform'
            }
    stages {
        stage('Git checkout') {
            steps {
                git branch: 'projeto-magnata', credentialsId: 'github-credentials', url: 'https://github.com/antoniocivc/projeto-padawan'
            }
        }
        
        stage('Terraform init') {
            steps {
                dir("pagina-no-bucket/terraform") { 
                withAWS(credentials:'aws-credentials') {
                sh 'terraform init -reconfigure'
                }
                }
            }
        }
        
        stage('Terraform plan') {
            steps {
                
                    dir("pagina-no-bucket/terraform") {
                    withAWS(credentials:'aws-credentials') {
                    sh 'terraform plan -var="domain=magnatasemijoia18k.com.br"'
                }
            }
        }
        }
        stage('Terraform apply') {
            
            steps {
                 
                 dir("pagina-no-bucket/terraform") {
                 withAWS(credentials:'aws-credentials') {
                 sh 'terraform apply --auto-approve -var="domain=magnatasemijoia18k.com.br"'
                 }
                     
                 }
            }
            }
        }
    }
